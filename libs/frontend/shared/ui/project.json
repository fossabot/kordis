{
	"name": "frontend-shared-ui",
	"$schema": "../../../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/frontend/shared/ui/src",
	"prefix": "krd",
	"targets": {
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/frontend/shared/ui/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"libs/frontend/shared/ui/**/*.ts",
					"libs/frontend/shared/ui/**/*.html"
				]
			}
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "libs/frontend/shared/ui/.storybook",
				"browserTarget": "frontend-shared-ui:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/frontend-shared-ui",
				"configDir": "libs/frontend/shared/ui/.storybook",
				"browserTarget": "frontend-shared-ui:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		}
	},
	"tags": []
}
